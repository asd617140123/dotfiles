include html.snip

snippet     -
abbr        {% %}
options     word
	{% ${0:TARGET} %}

snippet     =
abbr        {%= %}
options     word
	{%= ${0:TARGET} %}

snippet     if
abbr        {% if (..) { %}
options     head
	{% if (${1:condition}) { %}
		${0:TARGET}
	{% } %}

snippet     ife
abbr        {% if (..) { %} .. {% } else { %}
options     head
	{% if (${1:condition}) { %}
		${2}
	{% } else { %}
		${0}
	{% } %}
